<Window x:Class="Sports.Display.Console.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sports.Display.Console"
        xmlns:waterPolo="clr-namespace:Sports.Wpf.Common.View.WaterPolo;assembly=Sports.Wpf.Common"
        mc:Ignorable="d"
        Height="480" Width="705" Left="0" Top="0" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF93B4F0" Offset="0"/>
                <GradientStop Color="#FF1D53B2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <waterPolo:Display DataContext="{Binding Race}"/>
    </Grid>
</Window>
